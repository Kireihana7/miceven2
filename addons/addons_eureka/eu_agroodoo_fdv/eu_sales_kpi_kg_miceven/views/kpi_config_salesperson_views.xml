<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="kpi_config_salesperson_view_tree" model="ir.ui.view">
        <field name="name">kpi.config.salesperson.view.tree</field>
        <field name="model">kpi.config.salesperson</field>
        <field name="inherit_id" ref="eu_sales_kpi_kg.kpi_config_salesperson_view_tree" />
        <field name="arch" type="xml">
            <field name="total_bono" position="after"/>
                <field name="tipo_kpi" options='{"no_open": True, "no_create_edit": True, "no_quick_create": True, "no_create": True}'/>
            </field>
        </field>
    </record>
    
    <record id="kpi_config_salesperson_view_form" model="ir.ui.view">
        <field name="name">kpi.config.salesperson.view.form</field>
        <field name="model">kpi.config.salesperson</field>
        <field name="inherit_id" ref="eu_sales_kpi_kg.kpi_config_salesperson_view_form" />
        <field name="arch" type="xml">
            <field name="crm_team_id" position="after"/>
                <field name="tipo_kpi" options='{"no_open": True, "no_create_edit": True, "no_quick_create": True, "no_create": True}'/>
            </field>
        </field>
    </record>

</odoo>