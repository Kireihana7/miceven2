<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="custom_audit_activity_view_tree" model="ir.ui.view">
        <field name="name">custom.audit.activity.view.tree</field>
        <field name="model">custom.audit.activity</field>
        <field name="arch" type="xml">
            <tree string="Actividades a realizar" editable="bottom">
                <field name="name" required="1" />
            </tree>
        </field>
    </record>

    <record id="custom_audit_media_view_tree" model="ir.ui.view">
        <field name="name">custom.audit.media.view.tree</field>
        <field name="model">custom.audit.media</field>
        <field name="arch" type="xml">
            <tree string="Medios de verificación" editable="bottom">
                <field name="name" required="1" />
            </tree>
        </field>
    </record>

    <record id="custom_audit_specific_action_view_tree" model="ir.ui.view">
        <field name="name">custom.audit.specific.action.view.tree</field>
        <field name="model">custom.audit.specific.action</field>
        <field name="arch" type="xml">
            <tree string="Acciones específicas" editable="bottom">
                <field name="name" required="1" />
            </tree>
        </field>
    </record>

</odoo>
