                    type="object" 
                    string="Cerrar SO" 
                    attrs="{'invisible': ['|',('state', 'not in', ('done','sale')),('so_cerrada','=',True)]}"
                    groups="eu_close_so.group_cerrar_so"
                    confirm="Â¿Desea cerrar la Venta? Esto no puede deshacerse" class="btn-primary"
                />
            </xpath>
        </field>
    </record>
</odoo>
