<?xml version="1.0" encoding="utf-8"?>
<odoo>    
    <template id="reporte_factura_formalibre_with_iva">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <t t-set="o" t-value="o.with_context(lang=lang)"/>
                    <t t-if="o.journal_id.name.lower() == 'notas de entregas'">
                        <t t-if="o.currency_id != o.company_id.currency_id">
                            <div class="page">
                                <style>
                                    table{
                                        font-size: 10px;
                                    }
                                </style>
                                <br/><br/>
                                <div class="row mt16">
                                    <div class="col-8">
                                        <t t-if="o.invoice_origin">
                                            <span>Pedido de Venta: </span><span t-if="o.invoice_origin" t-field="o.invoice_origin"/>
                                        </t>
                                        <t t-else="">
                                            <span />
                                        </t>
                                    </div>
                                    <div class="col-4" style="font-size:12px;">
                                        <span t-if="o.move_type == 'out_invoice'">FACTURA Nro.:</span>
                                        <span t-if="o.move_type == 'out_refund'">NOTA DE CREDITO</span>
                                        <span t-if="o.move_type == 'in_refund'">NOTA DE CREDITO DEL PROVEEDOR</span>
                                        <span t-if="o.move_type == 'in_invoice'">FACTURA DEL PROVEEDOR</span>
                                        <span t-if="o.state == 'draft'">BORRADOR</span>
                                        <span t-if="o.state == 'cancel'">CANCELADA</span>
                                        <span t-if="o.name != '/'" t-field="o.nombre_corto_factura"/>
                                    </div>
                                </div>
                                <div class="row mt16">
                                    <div class="col-8">
                                        <span/>
                                    </div>
                                    <div class="col-4" style="font-size:12px;">
                                        <div t-if="o.invoice_date" name="invoice_date">
                                            <strong>Fecha:</strong>
                                            <span t-field="o.invoice_date"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt16">
                                    <div class="col-8">
                                        <span/>
                                    </div>
                                    <div class="col-4" style="font-size:12px;">
                                        <div t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'" name="due_date">
                                            <strong>Vence:</strong>
                                            <span t-field="o.invoice_date_due"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt16" style="font-size:12px;">
                                    <div class="col-12">
                                        <strong>Cliente:</strong>
                                        <span t-field="o.partner_id.name"/>
                                    </div>
                                </div>
                                <div class="row mt16" style="font-size:12px;">
                                    <div class="col-12">
                                        <strong>Dirección:</strong>
                                        <span t-field="o.direccion_completa"/>
                                    </div>
                                </div>
                                <div class="row mt16" style="font-size:12px;">
                                    <div class="col-2" t-if="o.partner_id.rif">
                                        <strong>Rif:</strong>
                                        <span t-esc="o.partner_id.rif[:10]"/><span>-</span><span t-esc="o.partner_id.rif[10:]"/>
                                    </div>
                                    <div class="col-4">
                                        <strong>Teléfono:</strong>
                                        <t t-if="o.partner_id.mobile">
                                            <span t-esc="o.partner_id.mobile"/>
                                        </t>
                                        <t t-elif="o.partner_id.phone">
                                            <span t-esc="o.partner_id.phone"/>
                                        </t>
                                        <t t-else="">
                                            <span/>
                                        </t>
                                        
                                    </div>  
                                    <div class="col-6" t-if="o.user_id" name="user_id">
                                        <strong>Vendedor:</strong>
                                        <span t-field="o.user_id.name"/>
                                    </div>                          
                                </div>
                                <t t-set="display_discount" t-value="any(l.discount for l in o.invoice_line_ids)"/>
                                <table class="table table-sm table-borderless o_main_table" name="invoice_line_table">
                                    <thead>
                                        <tr>
                                            <th name="th_codigo" class="text-left"><span>Código</span></th>
                                            <th name="th_description" class="text-left"><span>Descripción</span></th>
                                            <th name="th_description" class="text-left"><span>Marca</span></th>
                                            <th name="th_quantity" class="text-right"><span>Cantidad</span></th>
                                            <th name="th_priceunit" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Precio</span></th>
                                            <th name="th_subtotal" class="text-right">
                                                <span>Total</span>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody class="invoice_tbody">
                                        <t t-set="current_subtotal" t-value="0"/>
                                        <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                                        <t t-set="descuento_total" t-value="0"/>
                                        <t t-set="subtotal_priceunit" t-value="0"/>
                                        <t t-foreach="lines" t-as="line">
                                            <t t-set="subtotal_priceunit" t-value="subtotal_priceunit + (line.price_unit * line.quantity)"/>
                                            <t t-set="current_subtotal" t-value="current_subtotal + (line.price_subtotal * line.quantity)"/>
                                            <t t-set="descuento_total" t-value="descuento_total + ((line.discount * (line.price_unit * line.quantity))/100)"/>
                                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                                <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                                    <td name="code"><span t-field="line.product_id.product_tmpl_id.default_code" t-options="{'widget': 'text'}"/></td>
                                                    <td name="account_invoice_line_name">
                                                        <span t-field="line.product_id.name" t-options="{'widget': 'text'}"/>
                                                    </td>

                                                    <td class="text-right">
                                                        <span t-field="line.quantity"/>
                                                    </td>
                                                    <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                        <span class="text-nowrap" t-field="line.price_unit"/>
                                                    </td>
                                                    <td class="text-right o_price_total">
                                                        <span class="text-nowrap" t-field="line.price_subtotal" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                                    </td>
                                                </t>
                                                <t t-if="line.display_type == 'line_section'">
                                                    <td colspan="99">
                                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                                    </td>
                                                    <t t-set="current_section" t-value="line"/>
                                                    <t t-set="current_subtotal" t-value="0"/>
                                                </t>
                                                <t t-if="line.display_type == 'line_note'">
                                                    <td colspan="99">
                                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                                    </td>
                                                </t>
                                            </tr>
                                            <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                                <tr class="is-subtotal text-right">
                                                    <td colspan="99">
                                                        <strong class="mr16">Subtotal</strong>
                                                        <span t-esc="current_subtotal" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                    </tbody>
                                </table>
                                <div class="clearfix">
                                    <div id="total" class="row" style="border:1px solid black;">
                                        <div class="col-8">
                                            <table style="page-break-inside: avoid;">
                                                <tr>
                                                    <td><strong>SubTotal:</strong></td>
                                                    <td class="text-right" style="padding-left:20px;">
                                                        <span t-esc="subtotal_priceunit" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                                    </td>
                                                    <td/>
                                                </tr>
                                                <tr>
                                                    <td><strong>Descuento:</strong></td>
                                                    <td class="text-right" style="padding-left:20px;">
                                                        <span t-esc="descuento_total" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                                    </td>
                                                    <td class="text-right" colspan="2" style="padding-left:20px;">
                                                        <span t-esc="(descuento_total/subtotal_priceunit)*100" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>%
                                                    </td>
        
                                                </tr>
                                                <tr>
                                                    <td><strong>Total Neto:</strong></td>
                                                    <td class="text-right" style="padding-left:20px;">
                                                        <span t-esc="(subtotal_priceunit-descuento_total)" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                                    </td>
                                                    <td/>
                                                </tr>
                                            </table>
                                        </div>
                                        <div class="col-4">
                                            <table style="page-break-inside: avoid; margin-right:-20px;" class="w-100">
                                                <tr>
                                                    <td class="text-left"><strong>Base Imponible:</strong></td>
                                                    <td class="text-right">
                                                        <span t-esc="o.amount_untaxed" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                                    </td>
                                                    <td/>
                                                </tr>
                                                <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                                    <tr style="">
                                                        <t t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) in [0, 1] and o.amount_untaxed == amount_by_group[2]">
                                                            <td class="text-left">
                                                                <strong><span class="text-nowrap" t-esc="amount_by_group[0]"/>:</strong>
                                                            </td>
                                                            <td class="text-right o_price_total" style="padding-left:20px;">
                                                                <span class="text-nowrap" t-esc="amount_by_group[1]" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                                            </td>
                                                        </t>
                                                        <t t-else="">
                                                            <td class="text-left">
                                                                <strong><span t-esc="amount_by_group[0]"/>:</strong>
                                                                <!-- <span class="text-nowrap"> en
                                                                    <t t-esc="amount_by_group[2]" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                                                </span> -->
                                                            </td>
                                                            <td class="text-right o_price_total" style="padding-left:20px;">
                                                                <span class="text-nowrap" t-esc="amount_by_group[1]" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                                            </td>
                                                        </t>
                                                    </tr>
                                                </t>
                                                <tr style="">
                                                    <td class="text-left">
                                                        <strong><span class="text-nowrap" />Iva 16%:</strong>
                                                    </td>
                                                    <td class="text-right o_price_total" style="padding-left:20px;">
                                                        <span class="text-nowrap" t-esc="o.amount_untaxed * 0.16" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td class="text-left"><strong>Total:</strong></td>
                                                    <td class="text-right" style="padding-left:20px;">
                                                        <span class="text-nowrap" t-esc="o.amount_total + (o.amount_untaxed * 0.16)" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                                    </td>
                                                </tr>
                                                <t t-if="print_with_payments">
                                                    <t t-if="o.payment_state != 'invoicing_legacy'">
                                                        <t t-set="payments_vals" t-value="o.sudo()._get_reconciled_info_JSON_values()"/>
                                                        <t t-foreach="payments_vals" t-as="payment_vals">
                                                            <tr>
                                                                <td class="text-left">
                                                                    <i class="oe_form_field text-right oe_payment_label">Pagado el<t t-esc="payment_vals['date']" t-options="{&quot;widget&quot;: &quot;date&quot;}"/></i>
                                                                </td>
                                                                <td class="text-right" style="padding-left:20px;">
                                                                    <span t-esc="payment_vals['amount']" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                                                </td>
                                                            </tr>
                                                        </t>
                                                        <t t-if="len(payments_vals) &gt; 0">
                                                            <tr>
                                                                <td class="text-left"><strong>Importe Adeudado</strong></td>
                                                                <td class="text-right" style="padding-left:20px;">
                                                                    <span t-field="o.amount_residual" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                                                </td>
                                                            </tr>
                                                        </t>
                                                    </t>
                                                </t>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt16" style="font-size:12px;">                            
                                    <div class="col-10" style="text-align:right;">
                                        <strong>SON:</strong>
                                        <span t-set="amount_letras" t-value="o.numero_to_letras(o.amount_total + (o.amount_untaxed * 0.16))"/>
                                        <span t-esc="amount_letras"/>
                                    </div>
                                </div>
                                <div class="row mt16" style="font-size:10px;" t-if="o.narration">
                                    <div class="col-12">
                                        <strong>OBSERVACIONES:</strong>
                                        <span t-field="o.narration"/>
                                    </div>
                                </div>
                                <br/>
                                <div class="row mt16" style="font-size:10px;">
                                    <div class="col-6">
                                        <strong>RECIBIDO POR EL CLIENTE: _____________________________</strong>
                                    </div>
                                    <div class="col-1"/>
                                    <div class="col-5">
                                        <strong>Operador:</strong>
                                        <span t-esc="o.create_uid.name"/>
                                    </div>
                                </div>
                            </div> 
                        </t>
                        <t t-if="o.currency_id == o.company_id.currency_id">
                            <div class="page">
                                <style>
                                    table{
                                        font-size: 10px;
                                    }
                                </style>
                                <br/>
                                <div class="row mt16">
                                    <div class="col-8">
                                        <t t-if="o.invoice_origin">
                                            <span>Pedido de Venta: </span><span t-if="o.invoice_origin" t-field="o.invoice_origin"/>
                                        </t>
                                        <t t-else="">
                                            <span />
                                        </t>
                                    </div>
                                    <div class="col-4" style="font-size:12px;">
                                        <span t-if="o.move_type == 'out_invoice'">FACTURA Nro.:</span>
                                        <span t-if="o.move_type == 'out_refund'">NOTA DE CREDITO</span>
                                        <span t-if="o.move_type == 'in_refund'">NOTA DE CREDITO DEL PROVEEDOR</span>
                                        <span t-if="o.move_type == 'in_invoice'">FACTURA DEL PROVEEDOR</span>
                                        <span t-if="o.state == 'draft'">BORRADOR</span>
                                        <span t-if="o.state == 'cancel'">CANCELADA</span>
                                        <span t-if="o.name != '/'" t-field="o.nombre_corto_factura"/>
                                    </div>
                                </div>
                                <div class="row mt16">
                                    <div class="col-8">
                                        <span/>
                                    </div>
                                    <div class="col-4" style="font-size:12px;">
                                        <div t-if="o.invoice_date" name="invoice_date">
                                            <strong>Fecha:</strong>
                                            <span t-field="o.invoice_date"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt16">
                                    <div class="col-8">
                                        <span/>
                                    </div>
                                    <div class="col-4" style="font-size:12px;">
                                        <div t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'" name="due_date">
                                            <strong>Vence:</strong>
                                            <span t-field="o.invoice_date_due"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt16" style="font-size:12px;">
                                    <div class="col-12">
                                        <strong>Cliente:</strong>
                                        <span t-field="o.partner_id.name"/>
                                    </div>
                                </div>
                                <div class="row mt16" style="font-size:12px;">
                                    <div class="col-12">
                                        <strong>Dirección:</strong>
                                        <span t-field="o.direccion_completa"/>
                                    </div>
                                </div>
                                <div class="row mt16" style="font-size:12px;">
                                    <div class="col-2">
                                        <strong>Rif:</strong>
                                        <span t-esc="o.partner_id.rif[:10]"/><span>-</span><span t-esc="o.partner_id.rif[10:]"/>
                                    </div>
                                    <div class="col-4">
                                        <strong>Teléfono:</strong>
                                        <t t-if="o.partner_id.mobile">
                                            <span t-esc="o.partner_id.mobile"/>
                                        </t>
                                        <t t-elif="o.partner_id.phone">
                                            <span t-esc="o.partner_id.phone"/>
                                        </t>
                                        <t t-else="">
                                            <span/>
                                        </t>
                                        
                                    </div>  
                                    <div class="col-6" t-if="o.user_id" name="user_id">
                                        <strong>Vendedor:</strong>
                                        <span t-field="o.user_id.name"/>
                                    </div>                          
                                </div>
                                <t t-set="display_discount" t-value="any(l.discount for l in o.invoice_line_ids)"/>
                                <table class="table table-sm table-borderless o_main_table" name="invoice_line_table">
                                    <thead>
                                        <tr>
                                            <th name="th_codigo" class="text-left"><span>Código</span></th>
                                            <th name="th_description" class="text-left"><span>Descripción</span></th>
                                            <th name="th_description" class="text-left"><span>Marca</span></th>
                                            <th name="th_quantity" class="text-right"><span>Cantidad</span></th>
                                            <th name="th_priceunit" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Precio</span></th>
                                            <th name="th_subtotal" class="text-right">
                                                <span>Total</span>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody class="invoice_tbody">
                                        <t t-set="current_subtotal" t-value="0"/>
                                        <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                                        <t t-set="descuento_total" t-value="0"/>
                                        <t t-set="subtotal_priceunit" t-value="0"/>
                                        <t t-foreach="lines" t-as="line">
                                            <t t-set="subtotal_priceunit" t-value="subtotal_priceunit + (line.price_unit * line.quantity * o.manual_currency_exchange_rate)"/>
                                            <t t-set="current_subtotal" t-value="current_subtotal + (line.price_subtotal * line.quantity * o.manual_currency_exchange_rate)"/>
                                            <t t-set="descuento_total" t-value="descuento_total + ((o.manual_currency_exchange_rate * line.discount * (line.price_unit * line.quantity))/100)"/>
                                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                                <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                                    <td name="code"><span t-field="line.product_id.product_tmpl_id.default_code" t-options="{'widget': 'text'}"/></td>
                                                    <td name="account_invoice_line_name">
                                                        <span t-field="line.product_id.name" t-options="{'widget': 'text'}"/>
                                                    </td>

                                                    <td class="text-right">
                                                        <span t-field="line.quantity"/>
                                                    </td>
                                                    <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                        <span class="text-nowrap" t-esc="line.price_unit * o.manual_currency_exchange_rate" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                                    </td>
                                                    <td class="text-right o_price_total">
                                                        <span class="text-nowrap" t-esc="line.price_subtotal * o.manual_currency_exchange_rate" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                                    </td>
                                                </t>
                                                <t t-if="line.display_type == 'line_section'">
                                                    <td colspan="99">
                                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                                    </td>
                                                    <t t-set="current_section" t-value="line"/>
                                                    <t t-set="current_subtotal" t-value="0"/>
                                                </t>
                                                <t t-if="line.display_type == 'line_note'">
                                                    <td colspan="99">
                                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                                    </td>
                                                </t>
                                            </tr>
                                            <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                                <tr class="is-subtotal text-right">
                                                    <td colspan="99">
                                                        <strong class="mr16">Subtotal</strong>
                                                        <span t-esc="current_subtotal" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                    </tbody>
                                </table>
                                <div class="clearfix">
                                    <div id="total" class="row" style="border:1px solid black;">
                                        <div class="col-8">
                                            <table style="page-break-inside: avoid;">
                                                <tr>
                                                    <td><strong>SubTotal:</strong></td>
                                                    <td class="text-right" style="padding-left:20px;">
                                                        <span t-esc="subtotal_priceunit" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                                    </td>
                                                    <td/>
                                                </tr>
                                                <tr>
                                                    <td><strong>Descuento:</strong></td>
                                                    <td class="text-right" style="padding-left:20px;">
                                                        <span t-esc="descuento_total" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                                    </td>
                                                    <td class="text-right" colspan="2" style="padding-left:20px;">
                                                        <span t-esc="(descuento_total/subtotal_priceunit)*100" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>%
                                                    </td>
        
                                                </tr>
                                                <tr>
                                                    <td><strong>Total Neto:</strong></td>
                                                    <td class="text-right" style="padding-left:20px;">
                                                        <span t-esc="(subtotal_priceunit-descuento_total)" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                                    </td>
                                                    <td/>
                                                </tr>
                                            </table>
                                        </div>
                                        <div class="col-4">
                                            <table style="page-break-inside: avoid; margin-right:-20px;" class="w-100">
                                                <tr>
                                                    <td class="text-left"><strong>Base Imponible:</strong></td>
                                                    <td class="text-right">
                                                        <span t-esc="o.amount_untaxed * o.manual_currency_exchange_rate" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                                    </td>
                                                    <td/>
                                                </tr>
                                                <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                                    <tr style="">
                                                        <t t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) in [0, 1] and o.amount_untaxed == amount_by_group[2]">
                                                            <td class="text-left">
                                                                <strong><span class="text-nowrap" t-esc="amount_by_group[0]"/>:</strong>
                                                            </td>
                                                            <td class="text-right o_price_total" style="padding-left:20px;">
                                                                <span class="text-nowrap" t-esc="amount_by_group[1]" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                                            </td>
                                                        </t>
                                                        <t t-else="">
                                                            <td class="text-left">
                                                                <strong><span t-esc="amount_by_group[0]"/>:</strong>
                                                                <!-- <span class="text-nowrap"> en
                                                                    <t t-esc="amount_by_group[2]" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                                                </span> -->
                                                            </td>
                                                            <td class="text-right o_price_total" style="padding-left:20px;">
                                                                <span class="text-nowrap" t-esc="amount_by_group[1]" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                                            </td>
                                                        </t>
                                                    </tr>
                                                </t>
                                                <tr style="">
                                                    <td class="text-left">
                                                        <strong><span class="text-nowrap" />Iva 16%:</strong>
                                                    </td>
                                                    <td class="text-right o_price_total" style="padding-left:20px;">
                                                        <span class="text-nowrap" t-esc="o.manual_currency_exchange_rate * o.amount_untaxed * 0.16" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td class="text-left"><strong>Total:</strong></td>
                                                    <td class="text-right" style="padding-left:20px;">
                                                        <span class="text-nowrap" t-esc="(o.manual_currency_exchange_rate * o.amount_total) + (o.amount_untaxed * 0.16 * o.manual_currency_exchange_rate)" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                                    </td>
                                                </tr>
                                                <t t-if="print_with_payments">
                                                    <t t-if="o.payment_state != 'invoicing_legacy'">
                                                        <t t-set="payments_vals" t-value="o.sudo()._get_reconciled_info_JSON_values()"/>
                                                        <t t-foreach="payments_vals" t-as="payment_vals">
                                                            <tr>
                                                                <td class="text-left">
                                                                    <i class="oe_form_field text-right oe_payment_label">Pagado el<t t-esc="payment_vals['date']" t-options="{&quot;widget&quot;: &quot;date&quot;}"/></i>
                                                                </td>
                                                                <td class="text-right" style="padding-left:20px;">
                                                                    <span t-esc="payment_vals['amount']" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                                                </td>
                                                            </tr>
                                                        </t>
                                                        <t t-if="len(payments_vals) &gt; 0">
                                                            <tr>
                                                                <td class="text-left"><strong>Importe Adeudado</strong></td>
                                                                <td class="text-right" style="padding-left:20px;">
                                                                    <span t-esc="o.amount_residual * o.manual_currency_exchange_rate" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                                                </td>
                                                            </tr>
                                                        </t>
                                                    </t>
                                                </t>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt16" style="font-size:12px;">                            
                                    <div class="col-10" style="text-align:right;">
                                        <strong>SON:</strong>
                                        <span t-set="amount_letras" t-value="o.numero_to_letras((o.amount_total * o.manual_currency_exchange_rate) + (o.amount_untaxed * 0.16 * o.manual_currency_exchange_rate))"/>
                                        <span t-esc="amount_letras"/>
                                    </div>
                                </div>
                                <div class="row mt16" style="font-size:10px;" t-if="o.narration">
                                    <div class="col-12">
                                        <strong>OBSERVACIONES:</strong>
                                        <span t-field="o.narration"/>
                                    </div>
                                </div>
                                <br/>
                                <div class="row mt16" style="font-size:10px;">
                                    <div class="col-6">
                                        <strong>RECIBIDO POR EL CLIENTE: _____________________________</strong>
                                    </div>
                                    <div class="col-1"/>
                                    <div class="col-5">
                                        <strong>Operador:</strong>
                                        <span t-esc="o.create_uid.name"/>
                                    </div>
                                </div>
                            </div> 
                        </t>
                    </t>
                    <t t-else="">
                        <div class="page">
                            <h3 class="text-center">No tienes permitido ver este reporte</h3>
                        </div>
                    </t>
                </t>
            </t>
        </t>
    </template>
</odoo>
