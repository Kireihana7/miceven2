<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_maintenance_quick_form_tool">
        <field name="name">view_maintenance_quick_form_tool</field>
        <field name="model">mro.tool</field>
        <field name="inherit_id" ref="mro_maintenance.tool_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vendor_id']" position="attributes">
                <attribute name="options">{'no_quick_create': True, 'no_create_edit' : True, "no_create": True, "no_open": True}</attribute>
            </xpath>
            <xpath expr="//field[@name='manufacturer_id']" position="attributes">
                <attribute name="options">{'no_quick_create': True, 'no_create_edit' : True, "no_create": True, "no_open": True}</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_maintenance_quick_form_task">
        <field name="name">view_maintenance_quick_form_task</field>
        <field name="model">mro.task</field>
        <field name="inherit_id" ref="mro_maintenance.mro_task_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='category_id']" position="attributes">
                <attribute name="options">{'no_quick_create': True, 'no_create_edit' : True, "no_create": True, "no_open": True}</attribute>
            </xpath>
            <xpath expr="//field[@name='parts_id']" position="attributes">
                <attribute name="options">{'no_quick_create': True, 'no_create_edit' : True, "no_create": True, "no_open": True}</attribute>
            </xpath>
            <xpath expr="//field[@name='tool_id']" position="attributes">
                <attribute name="options">{'no_quick_create': True, 'no_create_edit' : True, "no_create": True, "no_open": True}</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_maintenance_quick_form_location">
        <field name="name">view_maintenance_quick_location</field>
        <field name="model">mro.equipment.location</field>
        <field name="inherit_id" ref="mro_maintenance.Equipment_location_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position="attributes">
                <attribute name="options">{'no_quick_create': True, 'no_create_edit' : True, "no_create": True, "no_open": True}</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_maintenance_quick_form_team">
        <field name="name">view_maintenance_quick_team</field>
        <field name="model">mro.maintenance.team</field>
        <field name="inherit_id" ref="mro_maintenance.mro_maintenance_team_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="options">{'no_quick_create': True, 'no_create_edit' : True, "no_create": True, "no_open": True}</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_maintenance_quick_form_equipment">
        <field name="name">view_maintenance_quick_equipment</field>
        <field name="model">mro.equipment</field>
        <field name="inherit_id" ref="mro_maintenance.equipments_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tag_ids']" position="attributes">
                <attribute name="options">{'no_quick_create': True, 'no_create_edit' : True, "no_create": True, "no_open": True}</attribute>
            </xpath>

            <xpath expr="//field[@name='employee_id']" position="attributes">
                <attribute name="options">{'no_quick_create': True, 'no_create_edit' : True, "no_create": True, "no_open": True}</attribute>
            </xpath>
            <xpath expr="//field[@name='maintenance_team_id']" position="attributes">
                <attribute name="options">{'no_quick_create': True, 'no_create_edit' : True, "no_create": True, "no_open": True}</attribute>
            </xpath>
            <xpath expr="//field[@name='manufacturer_id']" position="attributes">
                <attribute name="options">{'no_quick_create': True, 'no_create_edit' : True, "no_create": True, "no_open": True}</attribute>
            </xpath>

            <xpath expr="//field[@name='vendor_id']" position="attributes">
                <attribute name="options">{'no_quick_create': True, 'no_create_edit' : True, "no_create": True, "no_open": True}</attribute>
            </xpath>
            <xpath expr="//field[@name='parent_id']" position="attributes">
                <attribute name="options">{'no_quick_create': True, 'no_create_edit' : True, "no_create": True, "no_open": True}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
