<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_romana" model="ir.ui.view">
        <field name="name">product.template.product.form.romana</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Operaciones y Propiedades">
                    <group>
                        <group>
                            <field name="operaciones">
                                <tree create="0" edit="0" delete="0">
                                    <field name="name"/>

                                </tree>
                            </field>
                            <field name="propiedades">
                                <tree create="0" edit="0" delete="0">
                                    <field name="name"/>
                                    <field name="operation"/>
                                    <field name="qty_expected"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>