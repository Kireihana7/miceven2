<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_page_history_view" model="ir.ui.view">
        <field name="name">product.template.page.history.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="history_price" string="Historial de Costo Producto">
                    <field name="history_price_ids" options='{"no_open": True, "no_create_edit": True, "no_quick_create": True, "no_create": True}'/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
