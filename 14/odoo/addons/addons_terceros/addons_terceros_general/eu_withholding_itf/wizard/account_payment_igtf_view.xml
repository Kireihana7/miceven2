<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_igtf_form" model="ir.ui.view">
		<field name="name">account.payment.igtf.form</field>
		<field name="model">account.payment.igtf</field>
		<field name="arch" type="xml">
		    <form string="Registro de IGTF">
		    	<group>
					<group>
						<field name="payment_id"/>
						<field name="journal_id"/>
						<field name="memo"/>
					</group>
					<group>
						<field name="amount"/>
						<field name="currency_id"/>
						<field name="rate"/>
					</group>
				</group>
			    <footer> 
					<button string='Registrar IGTF' name='register_payment' type='object' class='btn-primary' />
					<button string='Cancel' class='btn-default' special="cancel"/>
		        </footer>				
		    </form>
		</field>
	</record>
</odoo>
