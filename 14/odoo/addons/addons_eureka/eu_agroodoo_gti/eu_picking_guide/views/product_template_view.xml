<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="product_template_dispatch_view" model="ir.ui.view">
			<field name="name">product.template.dispatch.view</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_only_form_view"/>
			<field name="arch" type="xml">
				<xpath expr="//notebook" position="inside">
					<page string="Picking Guide">
						<group>
							<field name="qty_no_dispatch"/>
							<field name="qty_to_dispatch"/>
							<field name="qty_on_stock"/>
						</group>
					</page>
				</xpath>
			</field>
		</record>
	</data>
</odoo>