<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_open_res_visit_tree_view" model="ir.actions.act_window">
        <field name="name">Visitas</field>
        <field name="res_model">res.visit</field>
        <field name="view_mode">tree,form,calendar,pivot,graph</field>
        <field name="view_id" ref="eu_sales_visit.res_visit_view_tree" />
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No hay ninguna visita programada
            </p>
            <p>
                Puedes programar una rápidamente en el botón <em>programar</em>
            </p>
        </field>
    </record>

    <record id="action_open_res_visit_frequency_tree_view" model="ir.actions.act_window">
        <field name="name">Frecuencias</field>
        <field name="res_model">res.visit.frequency</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="eu_sales_visit.res_visit_frequency_view_tree" />
    </record>

</odoo>
